# SwiftFormat Configuration for Monstore Cache Library

# Indentation
--indent 4
--tabwidth 4
--smarttabs enabled

# Line wrapping
--maxwidth 120
--wraparguments before-first
--wrapparameters before-first
--wrapcollections before-first

# Spacing
--trimwhitespace always
--insertlines enabled
--removelines enabled
--allman false

# Comments
--header strip
--headerformat "//\n//  {file}\n//  Monstore\n//\n//  Created by Larkin on {year}/5/8.\n//"

# Naming
--namingconvention type-camelcase
--namingconvention function-camelcase
--namingconvention variable-camelcase

# Formatting options
--semicolons never
--commas always
--decimalgrouping 3,4
--binarygrouping 4,8
--octalgrouping 4,8
--hexgrouping 4,8
--fractiongrouping enabled
--exponentgrouping enabled
--hexliteralcase uppercase
--exponentcase lowercase
--decimalgroupingseparator "_"
--binarygroupingseparator "_"
--octalgroupingseparator "_"
--hexgroupingseparator "_"

# Code organization
--sortimports enabled
--groupedimports enabled
--importgrouping testable-bottom
--markextensions enabled
--extensionacl on-declarations

# Other options
--disable redundanttype
--disable redundantfileprivate
--disable redundantprivate
--disable redundantinternal
--disable redundantpublic
--disable redundantopen
--disable redundantlet
--disable redundantvar
--disable redundantreturn
--disable redundantbackticks
--disable redundantself
--disable redundantinit
--disable redundanttype
--disable redundantnil
--disable redundantvoid
--disable redundantrawvalues
--disable redundanttypeannotations
